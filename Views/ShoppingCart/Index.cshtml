@model ShoppingCartViewModel

<h2 class="display-4 mb-4">Shopping Cart</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th class="text-uppercase">Selected amount</th>
            <th class="text-uppercase">Product</th>
            <th class="text-right text-uppercase">Price</th>
            <th class="text-right text-uppercase">Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var line in Model.ShoppingCart.shoppingCartItems)
        {
            <tr>
                <td class="text-center">@line.Amount</td>
                <td class="text-left">@line.product.Name</td>
                <td class="text-right">@line.product.Price.ToString("c")</td>
                <td class="text-right">
                    @((line.Amount * line.product.Price).ToString("c"))
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3" class="text-right">Total:</td>
            <td class="text-right">
                @Model.ShoppingCartTotal.ToString("c")
            </td>
        </tr>
    </tfoot>
</table>

<div class="footer-content">
    <span class="font-weight-bolder">TOTAL :  @Model.ShoppingCartTotal.ToString("c")</span> |
    <br />
    <a class="btn btn-primary" asp-controller="Order" asp-action="Checkout">Check out now</a>
    <a class="btn btn-outline-danger" asp-controller="Products" asp-action="Index">Keep Shopping</a>
</div>

